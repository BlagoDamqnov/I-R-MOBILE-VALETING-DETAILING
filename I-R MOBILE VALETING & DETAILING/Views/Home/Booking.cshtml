@model Book;

<style>
    body{
        background: linear-gradient(45deg, #F000A4, #2E8AA1, #3B218A, #7F81F1) !important;
    }
    .booking-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .booking-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333333;
        }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.15);
    }

    .btn-book-now {
        background-color: #007bff;
        border: none;
    }

        .btn-book-now:hover {
            background-color: #0056b3;
        }

    .form-select {
        appearance: none;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 8px 12px;
        width: 100%;
        position: relative;
        z-index: 1;
    }

        .form-select::after {
            content: '\f078';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            color: #333333;
            pointer-events: none;
        }
</style>
<div class="booking-container mt-5">
    <h2>Book a Mobile Car Wash</h2>
    @using (Html.BeginForm())
    {
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", required = "required" })
        </div>
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
        </div>
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone Number", required = "required" })
        </div>
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Location", required = "required" })
        </div>
        <div class="mb-3">
            <div class="position-relative">
                @Html.DropDownListFor(m => m.WashType, new SelectList(new[] {
            new { Value = "basic", Text = "Basic Wash" },
            new { Value = "deluxe", Text = "Deluxe Wash" },
            new { Value = "premium", Text = "Premium Wash" }
            }, "Value", "Text"), "Select a car wash type", new { @class = "form-select", required = "required" })
            </div>
        </div>
        <div class="mb-3">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Additional Description" })
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type = "date", min = DateTime.Today.ToString("yyyy-MM-dd"), required = "required" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Time, new { @class = "form-control", type = "time", required = "required" })
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-book-now btn-primary">Book Now</button>
        </div>
    }
</div>

<!-- Include Bootstrap Icons CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
